<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2023-11-13T06:04:54Z</date>
    <groups>
        <group>
            <name>Templates/Modules</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template Module Eltex ESR BGP4</template>
            <name>Template Module Eltex ESR BGP4</name>
            <description>https://github.com/AndAndr&#13;
BGP peer state for Eltex ESR</description>
            <groups>
                <group>
                    <name>Templates/Modules</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>BGP4 Peer(s)</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>Eltex BGP4 Peer(s)</name>
                    <type>SNMPV2</type>
                    <snmp_community>{$SNMP_COMMUNITY}</snmp_community>
                    <snmp_oid>discovery[{#SNMPVALUE},.1.3.6.1.4.1.35265.1.147.2.4.1.3.1.1.15.1.49.1.4,{#BGPPEERDESC},.1.3.6.1.4.1.35265.1.147.2.4.1.3.1.1.13.1.49.1.4]</snmp_oid>
                    <key>eltEsrBgp4V2PeerRemoteAddrStr</key>
                    <delay>1h</delay>
                    <port>{$SNMP_PORT}</port>
                    <lifetime>7d</lifetime>
                    <description>Обнаружение BGP пиров</description>
                    <item_prototypes>
                        <item_prototype>
                            <name>BGP Admin status for peer {#BGPPEERDESC}</name>
                            <type>SNMPV2</type>
                            <snmp_community>{$SNMP_COMMUNITY}</snmp_community>
                            <snmp_oid>.1.3.6.1.4.1.35265.1.147.2.4.1.3.1.1.14.1.49.1.4.{#SNMPVALUE}</snmp_oid>
                            <key>eltEsrBgp4V2PeerAdminStatus[{#SNMPVALUE}]</key>
                            <history>14d</history>
                            <trends>60d</trends>
                            <port>{$SNMP_PORT}</port>
                            <description>Whether or not the BGP FSM for this remote peer is halted or running. The BGP FSM for a remote peer is halted after processing a Stop event. Likewise, it is in the running state after a Start event.</description>
                            <applications>
                                <application>
                                    <name>BGP4 Peer(s)</name>
                                </application>
                            </applications>
                            <valuemap>
                                <name>eltEsrBgp4V2PeerAdminStatus</name>
                            </valuemap>
                            <preprocessing>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>1h</params>
                                </step>
                            </preprocessing>
                        </item_prototype>
                        <item_prototype>
                            <name>BGP peer $1 description</name>
                            <type>SNMPV2</type>
                            <snmp_community>{$SNMP_COMMUNITY}</snmp_community>
                            <snmp_oid>.1.3.6.1.4.1.35265.1.147.2.4.1.3.1.1.13.1.49.1.4.{#SNMPVALUE}</snmp_oid>
                            <key>eltEsrBgp4V2PeerDescription[{#SNMPVALUE}]</key>
                            <delay>10m</delay>
                            <history>14d</history>
                            <trends>0</trends>
                            <value_type>CHAR</value_type>
                            <port>{$SNMP_PORT}</port>
                            <description>A user configured description identifying this peer.  When this object is not the empty string, this object SHOULD contain a description that is unique within a given BGP instance for this peer.</description>
                            <applications>
                                <application>
                                    <name>BGP4 Peer(s)</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>1d</params>
                                </step>
                            </preprocessing>
                        </item_prototype>
                        <item_prototype>
                            <name>BGP peer {#BGPPEERDESC} remote AS</name>
                            <type>SNMPV2</type>
                            <snmp_community>{$SNMP_COMMUNITY}</snmp_community>
                            <snmp_oid>.1.3.6.1.4.1.35265.1.147.2.4.1.3.1.1.10.1.49.1.4.{#SNMPVALUE}</snmp_oid>
                            <key>eltEsrBgp4V2PeerRemoteAs[{#SNMPVALUE}]</key>
                            <delay>10m</delay>
                            <history>14d</history>
                            <trends>60d</trends>
                            <value_type>FLOAT</value_type>
                            <port>{$SNMP_PORT}</port>
                            <description>The remote autonomous system number received in the BGP OPEN message.</description>
                            <applications>
                                <application>
                                    <name>BGP4 Peer(s)</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>1d</params>
                                </step>
                            </preprocessing>
                        </item_prototype>
                        <item_prototype>
                            <name>BGP peer {#BGPPEERDESC} remote ID</name>
                            <type>SNMPV2</type>
                            <snmp_community>{$SNMP_COMMUNITY}</snmp_community>
                            <snmp_oid>.1.3.6.1.4.1.35265.1.147.2.4.1.3.1.1.11.1.49.1.4.{#SNMPVALUE}</snmp_oid>
                            <key>eltEsrBgp4V2PeerRemoteIdentifier[{#SNMPVALUE}]</key>
                            <delay>10m</delay>
                            <history>14d</history>
                            <trends>0</trends>
                            <value_type>CHAR</value_type>
                            <port>{$SNMP_PORT}</port>
                            <description>The BGP Identifier of this entry's remote BGP peer. This entry should be 0.0.0.0 unless the bgp4V2PeerState is in the openconfirm or the established state. The bgp4V2PeerState will generally be in the idle state when the FSM is halted.</description>
                            <applications>
                                <application>
                                    <name>BGP4 Peer(s)</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>1d</params>
                                </step>
                            </preprocessing>
                        </item_prototype>
                        <item_prototype>
                            <name>BGP peer {#BGPPEERDESC} state</name>
                            <type>SNMPV2</type>
                            <snmp_community>{$SNMP_COMMUNITY}</snmp_community>
                            <snmp_oid>.1.3.6.1.4.1.35265.1.147.2.4.1.3.1.1.12.1.49.1.4.{#SNMPVALUE}</snmp_oid>
                            <key>eltEsrBgp4V2PeerState[{#SNMPVALUE}]</key>
                            <history>14d</history>
                            <trends>60d</trends>
                            <port>{$SNMP_PORT}</port>
                            <description>The BGP peer connection state.</description>
                            <applications>
                                <application>
                                    <name>BGP4 Peer(s)</name>
                                </application>
                            </applications>
                            <valuemap>
                                <name>BgpPeerState</name>
                            </valuemap>
                            <preprocessing>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>1h</params>
                                </step>
                            </preprocessing>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&lt;&gt;6</expression>
                                    <name>BGP session is not established with peer {#BGPPEERDESC}</name>
                                    <opdata>Peer IP={#SNMPVALUE}; Peer ID={#BGPPEERDESC}</opdata>
                                    <priority>AVERAGE</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
            </discovery_rules>
        </template>
    </templates>
    <value_maps>
        <value_map>
            <name>BgpPeerState</name>
            <mappings>
                <mapping>
                    <value>1</value>
                    <newvalue>idle</newvalue>
                </mapping>
                <mapping>
                    <value>2</value>
                    <newvalue>connect</newvalue>
                </mapping>
                <mapping>
                    <value>3</value>
                    <newvalue>active</newvalue>
                </mapping>
                <mapping>
                    <value>4</value>
                    <newvalue>opensent</newvalue>
                </mapping>
                <mapping>
                    <value>5</value>
                    <newvalue>openconfirm</newvalue>
                </mapping>
                <mapping>
                    <value>6</value>
                    <newvalue>established</newvalue>
                </mapping>
            </mappings>
        </value_map>
        <value_map>
            <name>eltEsrBgp4V2PeerAdminStatus</name>
            <mappings>
                <mapping>
                    <value>1</value>
                    <newvalue>halted</newvalue>
                </mapping>
                <mapping>
                    <value>2</value>
                    <newvalue>running</newvalue>
                </mapping>
            </mappings>
        </value_map>
    </value_maps>
</zabbix_export>
